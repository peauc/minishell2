int		calc(t_args *args, char **ae)
{
  char		**path;
  char		**tmp_path;
  int		fdp[2];
  int		i;

  i = 0;
  if ((path = get_path(ae)) == NULL)
    return (1);
  while (args)
    {
      if ((pipe(fdp)) != 0)
	return (1);
      while (args->pipes.command[i])
	{
	  if (fork_it(fdp, args->pipes.command, i, path))
	    return (1);
	  i++;
	}
      args = args->next;
    }
  return (0);
}
