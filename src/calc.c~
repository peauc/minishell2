#include <unistd.h>
#include <stdlib.h>
#include "mysh.h"

char		*test_access(char *command, char **path)
{
  char		**new_path;

  if (access(command, X_OK) == 0)
    {
      printf("i've found the command master \n");
      return (command);
    }
  new_path = concatenate_path(command, path);
  showtab(new_path);
  free_tab(new_path);
}

int		fork_it(int fdp[2], char **pipes, int i, char **path)
{
  int		chpid;

  printf("pipes\n");
  showtab(pipes);
  printf("path\n");
  showtab(path);
  test_access(pipes[i], path);
